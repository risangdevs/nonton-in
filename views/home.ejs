<%- include('./components/header', {title: 'Home' }); %>
  <%- include('./components/navbar', { user }) %>
    <h1 class="retroshadow">
      <dl>
        <dt>Deep into The Movie</dt>
      </dl>
      <!-- <a>watch now !</a> -->
      <!-- Start-Up -->
    </h1>
    <div class="container">

      <!-- <div class="p-3 pb-md-4 mx-auto text-center">
        <h1 class="deepshadow">Deep into The Movie </h1>
        <p class="fs-5 text-muted"></p>
      </div> -->

      <form class="row g-3" method="GET" action="/">
        <div class="col">
          <label for="search" class="visually-hidden">Search</label>
          <input type="text" class="form-control" name="search" id="search" placeholder="Search movie Title...">
        </div>
        <div class="col-auto">
          <button type="submit" style="margin: 3px 10px 0px 0px;">Search</button>
        </div>
      </form>
      
      <div class="col-auto">
        <label style="margin-left: 20px;">Filter by Genre : </label>
        <a href="?genre=Drama"><button style="margin: 10px;">Drama</button></a>
        <a href="?genre=Action"><button style="margin: 10px;">Action</button></a>
        <a href="?genre=Sci-Fi"><button style="margin: 10px;">Sci-fi</button></a>
        <a href="?genre=Biography"><button style="margin: 10px;">Biography</button></a>
        <a href="?genre=Adventure"><button style="margin: 10px;">Adventure</button></a>
        <a href="?genre=Comedy"><button style="margin: 10px;">Comedy</button></a>
        <a href="?genre=Biography"><button style="margin: 10px;">Biography</button></a>
        <a href="/"><button class="btn btn-group">Reset Filter</button></a>
      </div>
      

      <div class="row">
        <% data.forEach((movie)=> { %>
          <div class="col-sm-3 py-3">
            <div class="card">
              <img src="<%=movie.movieUrl%>" class="card-img-top" alt="<%=movie.title%>">
              <div class="card-body">
                <h5 class="card-title text-center shadow">
                  <dl>
                    <dt>
                      <%=movie.title%>
                    </dt>
                  </dl>
                </h5>
                <br>
                <p class="card-text">
                  <%=movie.description%>
                </p>
              </div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">Genre : <%=movie.genre%>
                </li>
                <li class="list-group-item">Rating : <%=movie.ratingMovie%>
                </li>
                <li class="list-group-item">Price : <%=formatMonetary(movie.price)%>
                </li>
                <li class="list-group-item">Release Date : <%=formatDate(movie.releaseDate)%>
                </li>
              </ul>
              <div class="card-body">
                <a href="/tickets/buyticket/<%=movie.id%>" class="card-link">Buy Ticket</a>
              </div>
            </div>
          </div>
          <% }) %>
      </div>


    </div>
    <%- include('./components/footer') %>