<div class="<%=type !== 'hidden' ? 'mb-3' : ''%>">
  <label for="<%=name%>" class="col-form-label text-center <%=type == 'hidden' ? 'd-none' : ''%>" style="color: azure;"><%=label%></label>
  <input type="<%=type%>" class="form-control" id="<%=name%>" name="<%=name%>" value="<% if(value){ %><%=value%><% } %>"/>
</div>
