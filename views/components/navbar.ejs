<header class="p-3 bg-dark text-white">
  <div class="container">
    <div class="d-flex flex-wrap justify-content-between">
      <ul class="nav col-12 col-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="/" class="nav-link px-2 text-white">Home</a></li>
          <% if(user) { %>
            <li><a href="/tickets" class="nav-link px-2 text-white">My Tickets</a></li>
          <% } %>
          <% if(user?.role == 'admin') { %>
            <li><a href="/movies" class="nav-link px-2 text-white">Movies Management</a></li>
          <% } %>
      </ul>
      <ul class="nav col-12 col-lg-auto mb-2 justify-content-center mb-md-0">
        <% if(!user) { %>
          <li><a href="/auth/login" class="nav-link px-2 text-white">Login</a></li>
          <li><a href="/auth/register" class="nav-link px-2 text-white">Register</a></li>
        <% } else { %>
          <li><a href="/auth/logout" class="nav-link px-2 text-white">Logout</a></li>
        <% } %>
      </ul>
    </div>
  </div>
</header>